{
  "manifest_version": 3,
  "name": "Redirect Network Chrome Extension",
  "description": "A free extension to intercept and redirect URLs",
  "version": "0.001",
  "content_scripts": [{ "matches": ["<all_urls>"], "js": ["content.js"] }],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/128.png"
    },
    "default_popup": "popup-extension/build/index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["*://*/*"],
  "permissions": [
    "declarativeNetRequest",
    "webNavigation",
    "webRequest",
    "activeTab",
    "contextMenus",
    "storage",
    "notifications"
  ]
}

