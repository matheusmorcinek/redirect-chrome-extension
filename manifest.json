{
  "manifest_version": 3,
  "name": "Redirect Network Chrome Extension",
  "version": "0.001",
  "content_scripts": [{ "matches": ["<all_urls>"], "js": ["content.js"] }],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    },
    "default_popup": "popup-extension/build/index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["*://*/*"],
  "permissions": [
    "declarativeNetRequest",
    "webNavigation",
    "webRequest",
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "icons": {
    "16": "assets/icon16.ico",
    "48": "assets/icon48.ico",
    "128": "assets/icon128.ico"
  }
}
